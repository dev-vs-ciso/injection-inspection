@model BankingApp.Models.User

@{
    ViewData["Title"] = "Profile - " + Configuration["BankName"];
}

<div class="container my-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Profile</li>
        </ol>
    </nav>

    <!-- Profile Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="avatar-circle bg-white text-primary d-flex align-items-center justify-content-center" 
                                 style="width: 80px; height: 80px; border-radius: 50%;">
                                <i class="bi bi-person-fill fs-1"></i>
                            </div>
                        </div>
                        <div class="col">
                            <h2 class="mb-1">@Model.GetFullName()</h2>
                            <p class="mb-1 opacity-75">@Model.Email</p>
                            <p class="mb-0 opacity-75">Account: @Model.AccountNumber</p>
                        </div>
                        <div class="col-auto text-end">
                            <div class="badge bg-success fs-6">
                                <i class="bi bi-check-circle me-1"></i>Active Account
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Account Information -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-person-lines-fill me-2"></i>Account Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-muted">First Name</label>
                            <p class="form-control-plaintext border rounded px-3 py-2 bg-light">@Model.FirstName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-muted">Last Name</label>
                            <p class="form-control-plaintext border rounded px-3 py-2 bg-light">@Model.LastName</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-muted">Email Address</label>
                            <p class="form-control-plaintext border rounded px-3 py-2 bg-light">@Model.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-muted">Account Number</label>
                            <p class="form-control-plaintext border rounded px-3 py-2 bg-light">@Model.AccountNumber</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-muted">Current Balance</label>
                            <p class="form-control-plaintext border rounded px-3 py-2 bg-light text-success fw-bold">
                                $@Model.Balance.ToString("N2")
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-muted">Account Created</label>
                            <p class="form-control-plaintext border rounded px-3 py-2 bg-light">
                                @Model.CreatedAt.ToString("MMMM dd, yyyy")
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-muted">Account Status</label>
                            <p class="form-control-plaintext border rounded px-3 py-2 bg-light">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle me-1"></i>Inactive
                                    </span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-muted">Account Role</label>
                            <p class="form-control-plaintext border rounded px-3 py-2 bg-light">
                                <span class="badge bg-primary">@Model.Role</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning-fill me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Transaction")" class="btn btn-outline-primary">
                            <i class="bi bi-list-ul me-2"></i>View Transactions
                        </a>
                        <a href="@Url.Action("Search", "Transaction")" class="btn btn-outline-info">
                            <i class="bi bi-search me-2"></i>Search Transactions
                        </a>
                        <a href="@Url.Action("Preferences", "User")" class="btn btn-outline-secondary">
                            <i class="bi bi-gear me-2"></i>Account Preferences
                        </a>
                        <a href="@Url.Action("Index", "Feedback")" class="btn btn-outline-warning">
                            <i class="bi bi-chat-left-text me-2"></i>Submit Feedback
                        </a>
                    </div>
                </div>
            </div>

            <!-- Security Information -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0 text-warning">
                        <i class="bi bi-shield-exclamation me-2"></i>Security Notice
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-0">
                        <small>
                            <i class="bi bi-info-circle me-1"></i>
                            This is a training environment. Some security features may be intentionally disabled for educational purposes.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
