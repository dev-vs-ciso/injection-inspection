@model List<object>

@{
    ViewData["Title"] = $"Transaction Archive - {ViewBag.BankName}";
    Layout = "_Layout";
    
    var availableYears = (string[])ViewBag.AvailableYears;
    var availableMonths = ViewBag.AvailableMonths;
    var archivePerformed = (bool)ViewBag.ArchivePerformed;
    var selectedYear = ViewBag.SelectedYear as string;
    var selectedMonth = ViewBag.SelectedMonth as string;
    var transactions = Model ?? new List<object>();
    var summary = ViewBag.Summary;
    var message = ViewBag.Message as string;
    var messageType = ViewBag.MessageType as string;
}

<div class="container my-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Archive</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">Transaction Archive</h1>
                    <p class="text-muted mb-0">Historical transaction data retrieved using stored procedures</p>
                </div>
                <div>
                    <a href="@Url.Action("Dashboard", "Home")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Archive Search Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-archive me-2"></i>Archive Search
                    </h5>
                    <small>Search archived transactions by year and month using stored procedures</small>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(message))
                    {
                        var alertClass = messageType switch
                        {
                            "success" => "alert-success",
                            "error" => "alert-danger",
                            "info" => "alert-info",
                            _ => "alert-info"
                        };
                        
                        <div class="alert @alertClass alert-dismissible fade show" role="alert">
                            @message
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    <form method="POST" action="@Url.Action("Archive", "Transaction")">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="archive_year" class="form-label">Year</label>
                                <select class="form-select" id="archive_year" name="archiveYear" required>
                                    <option value="">Select Year</option>
                                    @foreach (var year in availableYears)
                                    {
                                        <option value="@year" selected="@(selectedYear == year)">@year</option>
                                    }
                                </select>
                                <div class="form-text">Archive data available for 2020-2021</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="archive_month" class="form-label">Month</label>
                                <select class="form-select" id="archive_month" name="archiveMonth" required>
                                    <option value="">Select Month</option>
                                    @foreach (var month in availableMonths)
                                    {
                                        var monthValue = month.GetType().GetProperty("Value")?.GetValue(month)?.ToString();
                                        var monthName = month.GetType().GetProperty("Name")?.GetValue(month)?.ToString();
                                        <option value="@monthValue" selected="@(selectedMonth == monthValue)">@monthName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-search me-2"></i>Load Archive Data
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Account Summary Cards (only show when transactions are loaded) -->
    @if (archivePerformed && transactions.Count > 0 && summary != null)
    {
        var summaryType = summary.GetType();
        var totalCredits = (decimal)(summaryType.GetProperty("TotalCredits")?.GetValue(summary) ?? 0m);
        var totalDebits = (decimal)(summaryType.GetProperty("TotalDebits")?.GetValue(summary) ?? 0m);
        var transactionCount = (int)(summaryType.GetProperty("RecentActivityCount")?.GetValue(summary) ?? 0);
        var userBalance = User.FindFirst("Balance")?.Value ?? "$0.00";
        
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card bg-primary text-white h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="bi bi-wallet2 fs-1"></i>
                            </div>
                            <div>
                                <h6 class="card-subtitle mb-1 text-white-50">Current Balance</h6>
                                <h4 class="card-title mb-0">@userBalance</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card bg-success text-white h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="bi bi-arrow-down-circle fs-1"></i>
                            </div>
                            <div>
                                <h6 class="card-subtitle mb-1 text-white-50">Period Credits</h6>
                                <h4 class="card-title mb-0">$@totalCredits.ToString("N2")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card bg-danger text-white h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="bi bi-arrow-up-circle fs-1"></i>
                            </div>
                            <div>
                                <h6 class="card-subtitle mb-1 text-white-50">Period Debits</h6>
                                <h4 class="card-title mb-0">$@totalDebits.ToString("N2")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card bg-info text-white h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="bi bi-activity fs-1"></i>
                            </div>
                            <div>
                                <h6 class="card-subtitle mb-1 text-white-50">Total Transactions</h6>
                                <h4 class="card-title mb-0">@transactionCount</h4>
                                <small class="text-white-50">@selectedMonth/@selectedYear</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Archive Results -->
    @if (archivePerformed)
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>Archive Results
                            <span class="badge bg-info text-white ms-2">Stored Procedure</span>
                        </h5>
                        @if (transactions.Count > 0)
                        {
                            <span class="badge bg-primary">@transactions.Count transaction(s)</span>
                        }
                    </div>
                    
                    <div class="card-body p-0">
                        @if (transactions.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Date</th>
                                            <th>Company</th>
                                            <th>Description</th>
                                            <th>Type</th>
                                            <th class="text-end">Amount</th>
                                            <th class="text-end">Balance</th>
                                            <th>Reference</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var transaction in transactions)
                                        {
                                            var type = transaction.GetType();
                                            var date = (DateTime)(type.GetProperty("Date")?.GetValue(transaction) ?? DateTime.Now);
                                            var company = type.GetProperty("Company")?.GetValue(transaction)?.ToString() ?? "";
                                            var description = type.GetProperty("Description")?.GetValue(transaction)?.ToString();
                                            var transactionType = type.GetProperty("TransactionType")?.GetValue(transaction)?.ToString() ?? "";
                                            var amount = (decimal)(type.GetProperty("Amount")?.GetValue(transaction) ?? 0m);
                                            var balanceAfter = (decimal)(type.GetProperty("BalanceAfter")?.GetValue(transaction) ?? 0m);
                                            var referenceNumber = type.GetProperty("ReferenceNumber")?.GetValue(transaction)?.ToString() ?? "";
                                            var category = type.GetProperty("Category")?.GetValue(transaction)?.ToString();
                                            
                                            var isCredit = transactionType.ToLower() == "credit";
                                            
                                            <tr>
                                                <td>
                                                    <div class="fw-semibold">@date.ToString("MMM dd, yyyy")</div>
                                                    <small class="text-muted">@date.ToString("h:mm tt")</small>
                                                </td>
                                                <td>
                                                    <div class="fw-semibold">@company</div>
                                                    @if (!string.IsNullOrEmpty(category))
                                                    {
                                                        <small class="badge bg-light text-dark">@category</small>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(description))
                                                    {
                                                        var shortDescription = description.Length > 50 ? description.Substring(0, 50) + "..." : description;
                                                        @shortDescription
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No description</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (isCredit)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-arrow-down me-1"></i>Credit
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-arrow-up me-1"></i>Debit
                                                        </span>
                                                    }
                                                </td>
                                                <td class="text-end">
                                                    <span class="@(isCredit ? "text-success" : "text-danger") fw-semibold">
                                                        @(isCredit ? "+" : "-")$@amount.ToString("N2")
                                                    </span>
                                                </td>
                                                <td class="text-end fw-semibold">
                                                    $@balanceAfter.ToString("N2")
                                                </td>
                                                <td>
                                                    <small class="font-monospace">@(referenceNumber.Length > 10 ? referenceNumber.Substring(0, 10) + "..." : referenceNumber)</small>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            
                            <!-- Archive Summary -->
                            <div class="card-footer">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <small class="text-muted">
                                            Showing @transactions.Count archived transactions for @selectedMonth/@selectedYear
                                            <span class="badge bg-info text-white ms-1">Stored Procedure</span>
                                        </small>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-outline-secondary" onclick="printResults()">
                                            <i class="bi bi-printer me-1"></i>Print
                                        </button>
                                        <button type="button" class="btn btn-outline-info" onclick="exportArchive()">
                                            <i class="bi bi-download me-1"></i>Export Archive
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-archive fs-1 text-muted mb-3"></i>
                                <h5 class="text-muted">No archived transactions found</h5>
                                <p class="text-muted">No transactions were found for @selectedMonth/@selectedYear. Try a different month or year.</p>
                                <div class="mt-3">
                                    <small class="text-muted">Archive search tips:</small>
                                    <ul class="list-unstyled small text-muted mt-1">
                                        <li>• Archive data is available for years 2020-2021</li>
                                        <li>• Data is retrieved using the get_archived_transactions stored procedure</li>
                                        <li>• Some months may have no transaction data</li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- No Search Performed -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-archive fs-1 text-info mb-3"></i>
                        <h4 class="text-muted mb-3">Transaction Archive</h4>
                        <p class="text-muted">Select a year and month above to load archived transaction data using stored procedures.</p>
                        
                        <div class="row justify-content-center mt-4">
                            <div class="col-md-8">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <i class="bi bi-database text-info fs-3"></i>
                                        <h6 class="mt-2">Stored Procedure Integration</h6>
                                        <p class="small text-muted mb-2">This archive system uses the <code>get_archived_transactions</code> stored procedure to retrieve historical data efficiently.</p>
                                        <ul class="list-unstyled small text-muted">
                                            <li>• Parameters: Year (string), Month (string)</li>
                                            <li>• Returns: Transaction table results</li>
                                            <li>• Available data: 2020-2021</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
<script>
// Print functionality
function printResults() {
    window.print();
}

// Export archive functionality (placeholder)
function exportArchive() {
    alert('Archive export functionality would be implemented here.\nThis would create a specialized export of the archived data.');
}

// Form validation
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            const year = document.getElementById('archive_year').value;
            const month = document.getElementById('archive_month').value;
            
            if (!year || !month) {
                e.preventDefault();
                alert('Please select both year and month to search the archive.');
            }
        });
    }
});
</script>
}