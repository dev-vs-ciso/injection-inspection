<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - @Configuration["BankName"]</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <style>
        .navbar-brand {
            font-weight: 700;
        }
        .transaction-debit {
            color: #dc3545;
        }
        .transaction-credit {
            color: #198754;
        }
        .card-stats {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .footer {
            margin-top: auto;
            padding: 20px 0;
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
        }
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .main-content {
            flex: 1;
        }
        .alert-security {
            background-color: #fff3cd;
            border-color: #ffeaa7;
            color: #856404;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-cpu me-2"></i>@Configuration["BankName"]
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Transaction/Search">Search</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="/Feedback/List">
                            <i class="bi bi-star me-1"></i>Reviews
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="aiDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-robot me-1"></i>AI Banking
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/ai/research">
                                    <i class="bi bi-search me-2"></i>Transaction Research
                                </a></li>
                                <li><a class="dropdown-item" href="/ai/loan-advisor">
                                    <i class="bi bi-calculator me-2"></i>Loan Advisor
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>@User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/User/Profile">
                                    <i class="bi bi-person me-2"></i>Profile
                                </a></li>
                                <li><a class="dropdown-item" href="/User/Preferences">
                                    <i class="bi bi-gear me-2"></i>Preferences
                                </a></li>
                                <li><a class="dropdown-item" href="/Feedback/Submit">
                                    <i class="bi bi-plus-circle me-2"></i>Write Review
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/User/Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages (TempData) -->
    @if (TempData["Message"] != null)
    {
        <div class="container mt-3">
            @{
                var messageType = TempData["MessageType"]?.ToString() ?? "info";
                var alertClass = messageType == "error" ? "danger" : messageType;
            }
            <div class="alert alert-@alertClass alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 @Configuration["BankName"]</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">
                        <i class="bi bi-shield-exclamation me-1"></i>
                        For Training Purposes Only
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
