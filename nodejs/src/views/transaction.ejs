<script>
function exportTransaction() {
    // Simple CSV export functionality
    const transaction = {
        id: '<%= transaction.id %>',
        date: '<%= transaction.date %>',
        company: '<%= transaction.company %>',
        type: '<%= transaction.transaction_type %>',
        amount: '<%= transaction.amount %>',
        reference: '<%= transaction.reference_number %>',
        balance: '<%= transaction.balance_after %>'
    };
    
    const csv = 'Transaction ID,Date,Company,Type,Amount,Reference,Balance\n' +
                `${transaction.id},${transaction.date},${transaction.company},${transaction.type},${transaction.amount},${transaction.reference},${transaction.balance}`;
    
    const blob = new Blob([csv], { type: 'text/csv' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `transaction_${transaction.id}.csv`;
    a.click();
    window.URL.revokeObjectURL(url);
}

function reportIssue(transactionId) {
    if (confirm('Would you like to report an issue with this transaction?')) {
        window.location.href = `/feedback/submit?transaction_id=${transactionId}`;
    }
}
