    </div>
    
    <div class="transaction-card">
        <div class="transaction-info">
            <div class="info-group">
                <label>Transaction ID:</label>
                <span class="transaction-id">#<%= transaction.id %></span>
            </div>
            
            <div class="info-group">
                <label>Reference Number:</label>
                <span><%= transaction.reference_number %></span>
            </div>
            
            <div class="info-group">
                <label>Date:</label>
                <span><%= new Date(transaction.date).toLocaleDateString('en-US', { 
                    weekday: 'long', 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                }) %></span>
            </div>
            
            <div class="info-group">
                <label>Company/Merchant:</label>
                <span class="company-name"><%= transaction.company %></span>
            </div>
            
            <div class="info-group">
                <label>Transaction Type:</label>
                <span class="transaction-type <%= transaction.transaction_type %>">
                    <%= transaction.transaction_type.toUpperCase() %>
                </span>
            </div>
            
            <div class="info-group amount-group">
                <label>Amount:</label>
                <span class="amount <%= transaction.transaction_type %>">
                    <% if (transaction.transaction_type === 'debit') { %>-<% } %>
                    $<%= parseFloat(transaction.amount).toFixed(2) %>
                </span>
            </div>
            
            <% if (transaction.description) { %>
            <div class="info-group description-group">
                <label>Description:</label>
                <div class="description">
                    <%= transaction.description %>
                </div>
            </div>
            <% } %>
            
            <div class="info-group">
                <label>Account Balance After Transaction:</label>
                <span class="balance">
                    $<%= parseFloat(transaction.balance_after).toFixed(2) %>
                </span>
            </div>
        </div>
        
        <div class="transaction-meta">
            <div class="meta-section">
                <h4>Account Information</h4>
                <p><strong>Account Holder:</strong> <%= user.first_name %> <%= user.last_name %></p>
                <p><strong>Account Number:</strong> **** **** **** <%= user.id.toString().padStart(4, '0') %></p>
                <p><strong>Account Type:</strong> Checking</p>
            </div>
            
            <div class="meta-section">
                <h4>Security Information</h4>
                <p><strong>Authorization Code:</strong> <%= transaction.reference_number.substring(0, 8) %></p>
                <p><strong>Processing Network:</strong> Secure Banking Network</p>
                <p><strong>Status:</strong> <span class="status completed">Completed</span></p>
            </div>
        </div>
    </div>
    
    <div class="transaction-actions">
        <button onclick="window.print()" class="btn btn-outline">Print Receipt</button>
        <button onclick="exportTransaction()" class="btn btn-outline">Export</button>
        <button onclick="reportIssue('<%= transaction.id %>')" class="btn btn-outline">Report Issue</button>
    </div>
