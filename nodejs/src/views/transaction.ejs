.info-group span {
    flex: 2;
    text-align: right;
}

.transaction-id {
    font-family: monospace;
    font-size: 16px;
    font-weight: bold;
}

.company-name {
    font-weight: 600;
    color: #333;
}

.transaction-type {
    font-weight: bold;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
}

.transaction-type.debit {
    background: #fee;
    color: #dc3545;
}

.transaction-type.credit {
    background: #efe;
    color: #28a745;
}

.amount-group {
    background: #f8f9fa;
    padding: 20px 0;
    margin: 15px 0;
    border-radius: 8px;
}

.amount {
    font-size: 24px;
    font-weight: bold;
}

.amount.debit {
    color: #dc3545;
}

.amount.credit {
    color: #28a745;
}

.balance {
    font-weight: 600;
    color: #333;
}

.description-group {
    flex-direction: column;
    align-items: flex-start;
}

.description {
    background: #f8f9fa;
    padding: 15px;
    border-radius: 4px;
    margin-top: 10px;
    width: 100%;
    line-height: 1.5;
}

.transaction-meta {
    background: #f8f9fa;
    padding: 20px 30px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
}

.meta-section h4 {
    margin: 0 0 15px 0;
    color: #333;
}

.meta-section p {
    margin: 8px 0;
    color: #666;
}

.status.completed {
    color: #28a745;
    font-weight: 600;
}

.transaction-actions {
    display: flex;
    gap: 15px;
    justify-content: center;
}

.btn {
    padding: 12px 24px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.2s;
}

.btn-secondary {
    background: #6c757d;
    color: white;
}

.btn-outline {
    background: transparent;
    border: 2px solid #007bff;
    color: #007bff;
}

.btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

@media (max-width: 768px) {
    .transaction-meta {
