<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction Archive - SecureBank Training</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        
        .footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            margin-top: auto;
            border-top: 1px solid #dee2e6;
        }
        
        .transaction-debit {
            color: #dc3545;
        }
        
        .transaction-credit {
            color: #198754;
        }
    </style>
</head>
<body class="d-flex flex-column">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-shield-lock me-2"></i>SecureBank Training
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/transactions/search">Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/feedback">Feedback</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-2"></i><%= user.firstName %> <%= user.lastName %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/profile">
                                <i class="bi bi-person me-2"></i>Profile
                            </a></li>
                            <li><a class="dropdown-item" href="/preferences">
                                <i class="bi bi-gear me-2"></i>Settings
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout">
                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container my-4">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Archive</li>
                </ol>
            </nav>

            <!-- Page Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="h3 mb-1">Transaction Archive</h1>
                            <p class="text-muted mb-0">Historical transaction data retrieved using stored procedures</p>
                        </div>
                        <div>
                            <a href="/dashboard" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Display Messages -->
            <% if (typeof message !== 'undefined' && message) { %>
                <div class="alert alert-<%= messageType === 'error' ? 'danger' : messageType %>" role="alert">
                    <% if (messageType === 'success') { %>
                        <i class="bi bi-check-circle me-2"></i>
                    <% } else if (messageType === 'error') { %>
                        <i class="bi bi-exclamation-triangle me-2"></i>
                    <% } else { %>
                        <i class="bi bi-info-circle me-2"></i>
                    <% } %>
                    <%= message %>
                </div>
            <% } %>

            <!-- Archive Search Form -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-archive me-2"></i>Archive Search
                            </h5>
                            <small>Search archived transactions by year and month using stored procedures</small>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="/transactions/archive">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="archive_year" class="form-label">Year</label>
                                        <select class="form-select" id="archive_year" name="archive_year" required>
                                            <option value="">Select Year</option>
                                            <% availableYears.forEach(year => { %>
                                            <option value="<%= year %>" <%= selectedYear === year ? 'selected' : '' %>><%= year %></option>
                                            <% }); %>
                                        </select>
                                        <div class="form-text">Archive data available for 2020-2021</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="archive_month" class="form-label">Month</label>
                                        <select class="form-select" id="archive_month" name="archive_month" required>
                                            <option value="">Select Month</option>
                                            <% availableMonths.forEach(month => { %>
                                            <option value="<%= month.value %>" <%= selectedMonth === month.value ? 'selected' : '' %>><%= month.name %></option>
                                            <% }); %>
                                        </select>
                                    </div>
                                </div>
                                
                                <button type="submit" class="btn btn-info">
                                    <i class="bi bi-search me-2"></i>Load Archive Data
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Summary Cards (only show when transactions are loaded) -->
            <% if (archivePerformed && transactions && transactions.length > 0) { %>
            <div class="row mb-4">
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card bg-primary text-white h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="bi bi-wallet2 fs-1"></i>
                                </div>
                                <div>
                                    <h6 class="card-subtitle mb-1 text-white-50">Current Balance</h6>
                                    <h4 class="card-title mb-0">$<%= parseFloat(user.balance).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card bg-success text-white h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="bi bi-arrow-down-circle fs-1"></i>
                                </div>
                                <div>
                                    <h6 class="card-subtitle mb-1 text-white-50">Period Credits</h6>
                                    <h4 class="card-title mb-0">$<%= summary.totalCredits.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card bg-danger text-white h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="bi bi-arrow-up-circle fs-1"></i>
                                </div>
                                <div>
                                    <h6 class="card-subtitle mb-1 text-white-50">Period Debits</h6>
                                    <h4 class="card-title mb-0">$<%= summary.totalDebits.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="card bg-info text-white h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="me-3">
                                    <i class="bi bi-activity fs-1"></i>
                                </div>
                                <div>
                                    <h6 class="card-subtitle mb-1 text-white-50">Total Transactions</h6>
                                    <h4 class="card-title mb-0"><%= summary.recentActivityCount %></h4>
                                    <small class="text-white-50"><%= selectedMonth %>/<%= selectedYear %></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

            <!-- Archive Results -->
            <% if (archivePerformed) { %>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-list-ul me-2"></i>Archive Results
                                <span class="badge bg-info text-white ms-2">Stored Procedure</span>
                            </h5>
                            <% if (transactions && transactions.length > 0) { %>
                            <span class="badge bg-primary"><%= transactions.length %> transaction(s)</span>
                            <% } %>
                        </div>
                        
                        <div class="card-body p-0">
                            <% if (transactions && transactions.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Date</th>
                                            <th>Company</th>
                                            <th>Description</th>
                                            <th>Type</th>
                                            <th class="text-end">Amount</th>
                                            <th class="text-end">Balance</th>
                                            <th>Reference</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% transactions.forEach(transaction => { %>
                                        <tr>
                                            <td>
                                                <div class="fw-semibold"><%= new Date(transaction.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
                                                <small class="text-muted"><%= new Date(transaction.date).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %></small>
                                            </td>
                                            <td>
                                                <div class="fw-semibold"><%= transaction.company %></div>
                                                <% if (transaction.category) { %>
                                                <small class="badge bg-light text-dark"><%= transaction.category %></small>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (transaction.description) { %>
                                                <%= transaction.description.length > 50 ? transaction.description.substring(0, 50) + '...' : transaction.description %>
                                                <% } else { %>
                                                <span class="text-muted">No description</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (transaction.transaction_type === 'credit') { %>
                                                <span class="badge bg-success">
                                                    <i class="bi bi-arrow-down me-1"></i>Credit
                                                </span>
                                                <% } else { %>
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-arrow-up me-1"></i>Debit
                                                </span>
                                                <% } %>
                                            </td>
                                            <td class="text-end">
                                                <span class="<%= transaction.transaction_type === 'credit' ? 'transaction-credit' : 'transaction-debit' %> fw-semibold">
                                                    <%= transaction.transaction_type === 'credit' ? '+' : '-' %>$<%= parseFloat(transaction.amount).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                                </span>
                                            </td>
                                            <td class="text-end fw-semibold">
                                                $<%= parseFloat(transaction.balance_after).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                            </td>
                                            <td>
                                                <small class="font-monospace"><%= transaction.reference_number ? transaction.reference_number.substring(0, 10) : 'N/A' %>...</small>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            
                            <!-- Archive Summary -->
                            <div class="card-footer">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <small class="text-muted">
                                            Showing <%= transactions.length %> archived transactions for <%= selectedMonth %>/<%= selectedYear %>
                                            <span class="badge bg-info text-white ms-1">Stored Procedure</span>
                                        </small>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-outline-secondary" onclick="printResults()">
                                            <i class="bi bi-printer me-1"></i>Print
                                        </button>
                                        <button type="button" class="btn btn-outline-info" onclick="exportArchive()">
                                            <i class="bi bi-download me-1"></i>Export Archive
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            <% } else { %>
                            <div class="text-center py-5">
                                <i class="bi bi-archive fs-1 text-muted mb-3"></i>
                                <h5 class="text-muted">No archived transactions found</h5>
                                <p class="text-muted">No transactions were found for <%= selectedMonth %>/<%= selectedYear %>. Try a different month or year.</p>
                                <div class="mt-3">
                                    <small class="text-muted">Archive search tips:</small>
                                    <ul class="list-unstyled small text-muted mt-1">
                                        <li>• Archive data is available for years 2020-2021</li>
                                        <li>• Data is retrieved using the get_archived_transactions stored procedure</li>
                                        <li>• Some months may have no transaction data</li>
                                    </ul>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% } else { %>
            <!-- No Search Performed -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-archive fs-1 text-info mb-3"></i>
                            <h4 class="text-muted mb-3">Transaction Archive</h4>
                            <p class="text-muted">Select a year and month above to load archived transaction data using stored procedures.</p>
                            
                            <div class="row justify-content-center mt-4">
                                <div class="col-md-8">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <i class="bi bi-database text-info fs-3"></i>
                                            <h6 class="mt-2">Stored Procedure Integration</h6>
                                            <p class="small text-muted mb-2">This archive system uses the <code>get_archived_transactions</code> stored procedure to retrieve historical data efficiently.</p>
                                            <ul class="list-unstyled small text-muted">
                                                <li>• Parameters: Year (string), Month (string)</li>
                                                <li>• Returns: Transaction table results</li>
                                                <li>• Available data: 2020-2021</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 SecureBank Training</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">
                        <i class="bi bi-shield-exclamation me-1"></i>
                        For Training Purposes Only
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Print functionality
        function printResults() {
            window.print();
        }

        // Export archive functionality (placeholder)
        function exportArchive() {
            alert('Archive export functionality would be implemented here.\nThis would create a specialized export of the archived data.');
        }

        // Form validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const year = document.getElementById('archive_year').value;
                    const month = document.getElementById('archive_month').value;
                    
                    if (!year || !month) {
                        e.preventDefault();
                        alert('Please select both year and month to search the archive.');
                    }
                });
            }
        });
    </script>
</body>
</html>