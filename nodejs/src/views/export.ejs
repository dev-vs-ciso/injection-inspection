<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Export Transactions - Secure Banking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="bi bi-bank me-2"></i>Secure Banking
            </a>
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person me-1"></i><%= user.firstName %> <%= user.lastName %>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/profile"><i class="bi bi-person-gear me-2"></i>Profile</a></li>
                        <li><a class="dropdown-item" href="/preferences"><i class="bi bi-gear me-2"></i>Preferences</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Export Transactions</li>
            </ol>
        </nav>

        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-1">
                            <i class="bi bi-download me-2"></i>Export Transactions
                        </h1>
                        <p class="text-muted mb-0">Generate and download your transaction data in CSV format</p>
                    </div>
                    <div>
                        <a href="/dashboard" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Export Form -->
        <div class="row mb-4">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-gear me-2"></i>Export Configuration
                        </h5>
                        <small>Advanced export options with system optimization features</small>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/export">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="filename" class="form-label">Export Filename</label>
                                    <input type="text" class="form-control" id="filename" name="filename" 
                                           placeholder="my-transactions" value="<%= filename || 'transactions' %>">
                                    <div class="form-text">Custom filename for your export (without extension)</div>
                                </div>
                                
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="date_range" class="form-label">Date Range (Days)</label>
                                    <select class="form-select" id="date_range" name="date_range">
                                        <option value="30" <%= dateRange === '30' ? 'selected' : '' %>>Last 30 days</option>
                                        <option value="90" <%= dateRange === '90' ? 'selected' : '' %>>Last 3 months</option>
                                        <option value="180" <%= dateRange === '180' ? 'selected' : '' %>>Last 6 months</option>
                                        <option value="365" <%= dateRange === '365' ? 'selected' : '' %>>Last year</option>
                                        <option value="all" <%= dateRange === 'all' ? 'selected' : '' %>>All transactions</option>
                                    </select>
                                </div>
                            </div>
                                                            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                                <button type="submit" class="btn btn-warning btn-lg">
                                    <i class="bi bi-download me-2"></i>Generate Export
                                </button>
                                <button type="reset" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-2"></i>Reset Form
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <!-- Sidebar with Info -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="bi bi-info-circle me-2"></i>Export Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="small">Your transaction data will be exported with the following information:</p>
                        <ul class="list-unstyled small">
                            <li class="mb-1"><i class="bi bi-check text-success me-1"></i> Date and time</li>
                            <li class="mb-1"><i class="bi bi-check text-success me-1"></i> Company names</li>
                            <li class="mb-1"><i class="bi bi-check text-success me-1"></i> Transaction amounts</li>
                            <li class="mb-1"><i class="bi bi-check text-success me-1"></i> Transaction types</li>
                            <li class="mb-1"><i class="bi bi-check text-success me-1"></i> Reference numbers</li>
                            <li class="mb-1"><i class="bi bi-check text-success me-1"></i> Account balances</li>
                        </ul>
                    </div>
                </div>
                
                <div class="card mt-3">
                    <div class="card-body text-center">
                        <i class="bi bi-shield-exclamation text-warning fs-3 mb-2"></i>
                        <h6 class="card-title">Security Notice</h6>
                        <p class="card-text small text-muted">
                            Keep exported files secure and delete them after use. Never share transaction data via unsecured channels.
                        </p>
                    </div>
                </div>
            </div>
        </div>

    <!-- Export Results -->
    <% if (typeof exportResults !== 'undefined' && exportResults) { %>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-terminal me-2"></i>Export Results
                    </h5>
                    <% if (exportResults.success) { %>
                    <span class="badge bg-success">Export Successful</span>
                    <% } else { %>
                    <span class="badge bg-danger">Export Failed</span>
                    <% } %>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Export File:</strong>
                        </div>
                        <div class="col-sm-9">
                            <code><%= exportResults.filename %></code>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Records Processed:</strong>
                        </div>
                        <div class="col-sm-9">
                            <%= exportResults.transactionCount %> transactions
                        </div>
                    </div>
                                 
                    <!-- Download Button -->
                    <% if (exportResults.success && exportResults.fileExists) { %>
                    <div class="row">
                        <div class="col-12">
                            <div class="d-grid gap-2 d-md-block">
                                <a href="/download/<%= exportResults.filename %>" 
                                   class="btn btn-success btn-lg">
                                    <i class="bi bi-download me-2"></i>Download CSV File
                                </a>
                                <a href="/export" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Generate New Export
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Form validation
    document.querySelector('form').addEventListener('submit', function(e) {
        const filename = document.getElementById('filename').value.trim();
        
        // Basic filename validation
        if (!filename) {
            e.preventDefault();
            alert('Please provide a filename for the export.');
            return false;
        }
        
        }
    );
    </script>
</body>
</html>