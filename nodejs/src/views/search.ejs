<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search - SecureBank Training</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        
        .footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            margin-top: auto;
            border-top: 1px solid #dee2e6;
        }
        
        .transaction-debit {
            color: #dc3545;
        }
        
        .transaction-credit {
            color: #198754;
        }
        
        .search-mode-tabs .nav-link.active {
            background-color: #0d6efd;
            color: white;
        }
        .advanced-search-panel {
            border: 2px dashed #0d6efd;
            border-radius: 8px;
            background-color: #f8f9ff;
        }
        .vulnerability-hint {
            background-color: #fff3cd;
            border-left: 4px solid #ffc107;
            padding: 8px 12px;
            font-size: 0.875em;
        }
    </style>
</head>
<body class="d-flex flex-column">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-shield-lock me-2"></i>SecureBank Training
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/transactions/search">Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/feedback">Feedback</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-2"></i><%= user.firstName %> <%= user.lastName %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/profile">
                                <i class="bi bi-person me-2"></i>Profile
                            </a></li>
                            <li><a class="dropdown-item" href="/preferences">
                                <i class="bi bi-gear me-2"></i>Settings
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout">
                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1">
<div class="container my-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Search</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">Enhanced Transaction Search</h1>
                    <p class="text-muted mb-0">Basic and Advanced search options for transaction analysis</p>
                </div>
                <div>
                    <a href="/dashboard" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Mode Tabs -->
    <div class="row mb-4">
        <div class="col-12">
            <ul class="nav nav-tabs search-mode-tabs" id="searchModeTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link <%= !query.advanced || query.advanced !== 'true' ? 'active' : '' %>" id="basic-tab" data-bs-toggle="tab" 
                            data-bs-target="#basic-search" type="button" role="tab">
                        <i class="bi bi-search me-2"></i>Basic Search
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link <%= query.advanced === 'true' ? 'active' : '' %>" id="advanced-tab" data-bs-toggle="tab" 
                            data-bs-target="#advanced-search" type="button" role="tab">
                        <i class="bi bi-gear me-2"></i>Advanced Search
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <!-- Search Forms -->
    <div class="tab-content" id="searchModeTabsContent">
        <!-- Basic Search Tab -->
        <div class="tab-pane fade <%= !query.advanced || query.advanced !== 'true' ? 'show active' : '' %>" id="basic-search" role="tabpanel">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-check me-2"></i>Basic Search
                    </h5>
                </div>
                <div class="card-body">
                    <form method="GET" action="/transactions/search">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="company" class="form-label">Company Name</label>
                                <input type="text" class="form-control" id="company" name="company" 
                                        placeholder="Enter company name..."
                                        value="<%= query.company || '' %>">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="date_from" class="form-label">From Date</label>
                                <input type="date" class="form-control" id="date_from" name="date_from"
                                        value="<%= query.date_from || '' %>">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="date_to" class="form-label">To Date</label>
                                <input type="date" class="form-control" id="date_to" name="date_to"
                                        value="<%= query.date_to || '' %>">
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-search me-2"></i>Search
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Advanced Search Tab -->
        <div class="tab-pane fade <%= query.advanced === 'true' ? 'show active' : '' %>" id="advanced-search" role="tabpanel">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>Advanced Search
                    </h5>
                    <small>Uses optimized SQL queries for better performance with large datasets</small>
                </div>
                <div class="card-body advanced-search-panel">
                    <form method="GET" action="/transactions/search">
                        <input type="hidden" name="advanced" value="true">
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="adv_company" class="form-label">Company Name Pattern</label>
                                <input type="text" class="form-control" id="adv_company" name="company" 
                                        placeholder="Enter company search pattern..."
                                        value="<%= query.company || '' %>">
                                <div class="form-text">Supports wildcard patterns (%, _)</div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <label for="transaction_type" class="form-label">Transaction Type</label>
                                <select class="form-select" id="transaction_type" name="transaction_type">
                                    <option value="">All Types</option>
                                    <option value="credit" <%= query.transaction_type === 'credit' ? 'selected' : '' %>>Credit</option>
                                    <option value="debit" <%= query.transaction_type === 'debit' ? 'selected' : '' %>>Debit</option>
                                </select>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <label for="category" class="form-label">Category</label>
                                <input type="text" class="form-control" id="category" name="category" 
                                        placeholder="Transaction category..."
                                        value="<%= query.category || '' %>">
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="amount_min" class="form-label">Min Amount ($)</label>
                                <input type="text" class="form-control" id="amount_min" name="amount_min" 
                                        placeholder="0.00"
                                        value="<%= query.amount_min || '' %>">
                                <div class="form-text">Numeric values only</div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <label for="amount_max" class="form-label">Max Amount ($)</label>
                                <input type="text" class="form-control" id="amount_max" name="amount_max" 
                                        placeholder="10000.00"
                                        value="<%= query.amount_max || '' %>">
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <label for="adv_date_from" class="form-label">From Date</label>
                                <input type="text" class="form-control" id="adv_date_from" name="date_from" 
                                        placeholder="YYYY-MM-DD"
                                        value="<%= query.date_from || '' %>">
                                <div class="form-text">ISO date format</div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <label for="adv_date_to" class="form-label">To Date</label>
                                <input type="text" class="form-control" id="adv_date_to" name="date_to" 
                                        placeholder="YYYY-MM-DD"
                                        value="<%= query.date_to || '' %>">
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="sort_by" class="form-label">Sort By</label>
                                <select class="form-select" id="sort_by" name="sort_by">
                                    <option value="date" <%= query.sort_by === 'date' ? 'selected' : '' %>>Date</option>
                                    <option value="amount" <%= query.sort_by === 'amount' ? 'selected' : '' %>>Amount</option>
                                    <option value="company" <%= query.sort_by === 'company' ? 'selected' : '' %>>Company</option>
                                    <option value="balance_after" <%= query.sort_by === 'balance_after' ? 'selected' : '' %>>Balance After</option>
                                </select>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label for="sort_order" class="form-label">Sort Order</label>
                                <select class="form-select" id="sort_order" name="sort_order">
                                    <option value="DESC" <%= query.sort_order === 'DESC' ? 'selected' : '' %>>Descending</option>
                                    <option value="ASC" <%= query.sort_order === 'ASC' ? 'selected' : '' %>>Ascending</option>
                                </select>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label for="limit" class="form-label">Result Limit</label>
                                <input type="text" class="form-control" id="limit" name="limit" 
                                        value="<%= query.limit || '100' %>" placeholder="Number of results...">
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-lightning me-2"></i>Advanced Search
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Results -->
    <% if (searchPerformed) { %>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul me-2"></i>Search Results
                        <% if (query.advanced === 'true') { %>
                        <span class="badge bg-warning text-dark ms-2">Advanced Mode</span>
                        <% } else { %>
                        <span class="badge bg-success ms-2">Safe Mode</span>
                        <% } %>
                    </h5>
                    <% if (transactions) { %>
                    <span class="badge bg-primary"><%= transactions.length %> result(s)</span>
                    <% } %>
                </div>
                
                <div class="card-body p-0">
                    <% if (transactions && transactions.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Company</th>
                                    <th>Description</th>
                                    <th>Type</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-end">Balance</th>
                                    <th>Reference</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% transactions.forEach(function(transaction) { %>
                                <tr>
                                    <td>
                                        <div class="fw-semibold"><%= new Date(transaction.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
                                        <small class="text-muted"><%= new Date(transaction.date).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }) %></small>
                                    </td>
                                    <td>
                                        <div class="fw-semibold"><%= transaction.company %></div>
                                        <% if (transaction.category) { %>
                                        <small class="badge bg-light text-dark"><%= transaction.category %></small>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (transaction.description) { %>
                                        <%= transaction.description.length > 50 ? transaction.description.substring(0, 50) + '...' : transaction.description %>
                                        <% } else { %>
                                        <span class="text-muted">No description</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (transaction.transactionType === 'credit') { %>
                                        <span class="badge bg-success">
                                            <i class="bi bi-arrow-down me-1"></i>Credit
                                        </span>
                                        <% } else { %>
                                        <span class="badge bg-danger">
                                            <i class="bi bi-arrow-up me-1"></i>Debit
                                        </span>
                                        <% } %>
                                    </td>
                                    <td class="text-end">
                                        <span class="<%= transaction.transactionType === 'credit' ? 'transaction-credit' : 'transaction-debit' %> fw-semibold">
                                            <%= transaction.transactionType === 'credit' ? '+' : '-' %>$<%= parseFloat(transaction.amount).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                        </span>
                                    </td>
                                    <td class="text-end fw-semibold">
                                        $<%= parseFloat(transaction.balanceAfter).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                    </td>
                                    <td>
                                        <small class="font-monospace"><%= transaction.referenceNumber.substring(0, 10) %>...</small>
                                    </td>
                                    <td>
                                        <a href="/transactions/detail/<%= transaction.id %>" 
                                            class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Export Options -->
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted">
                                    Showing <%= transactions.length %> transactions
                                    <% if (query.advanced === 'true') { %>
                                    <span class="badge bg-warning text-dark ms-1">SQL-optimized</span>
                                    <% } %>
                                </small>
                            </div>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-outline-secondary" onclick="printResults()">
                                    <i class="bi bi-printer me-1"></i>Print
                                </button>
                                <a href="/export" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-download me-1"></i>Advanced Export
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <% } else { %>
                    <div class="text-center py-5">
                        <i class="bi bi-search fs-1 text-muted mb-3"></i>
                        <h5 class="text-muted">No transactions found</h5>
                        <p class="text-muted">Try adjusting your search criteria or expanding the date range.</p>
                        <% if (query.advanced === 'true') { %>
                        <div class="mt-3">
                            <small class="text-muted">Advanced search tips:</small>
                            <ul class="list-unstyled small text-muted mt-1">
                                <li>• Use SQL wildcards: % for any characters, _ for single character</li>
                                <li>• Try different sort orders and limits</li>
                                <li>• Check your numeric formatting for amounts</li>
                                <li>• Ensure date formats are YYYY-MM-DD</li>
                            </ul>
                        </div>
                        <% } %>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <% } else { %>
    <!-- No Search Performed -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <p class="text-muted">Choose a search mode above and enter your criteria to find specific transactions.</p>
                    
                    <div class="row justify-content-center mt-4">
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <i class="bi bi-shield-check text-success fs-3"></i>
                                            <h6 class="mt-2">Basic Search</h6>
                                            <small class="text-muted">Safe, validated search using secure database queries</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <i class="bi bi-lightning text-warning fs-3"></i>
                                            <h6 class="mt-2">Advanced Search</h6>
                                            <small class="text-muted">High-performance mode with flexible SQL patterns</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>

<script>
// Tab switching functionality
document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('[data-bs-toggle="tab"]');
    tabs.forEach(tab => {
        tab.addEventListener('click', function() {
            // Update search mode based on active tab
            const target = this.getAttribute('data-bs-target');
            const forms = document.querySelectorAll('form input[name="advanced"]');
            
            forms.forEach(form => {
                if (target.includes('basic')) {
                    if (form) form.remove();
                } else if (target.includes('advanced')) {
                    if (!form) {
                        const hiddenInput = document.createElement('input');
                        hiddenInput.type = 'hidden';
                        hiddenInput.name = 'advanced';
                        hiddenInput.value = 'true';
                        form.closest('form').appendChild(hiddenInput);
                    }
                }
            });
        });
    });
});

// Quick date range functions (for basic search)
function setDateRange(days) {
    const today = new Date();
    const fromDate = new Date(today.getTime() - (days * 24 * 60 * 60 * 1000));
    
    const dateToInput = document.getElementById('date_to');
    const dateFromInput = document.getElementById('date_from');
    
    if (dateToInput) dateToInput.value = today.toISOString().split('T')[0];
    if (dateFromInput) dateFromInput.value = fromDate.toISOString().split('T')[0];
}

function printResults() {
    window.print();
}
</script>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 SecureBank Training</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">
                        <i class="bi bi-shield-exclamation me-1"></i>
                        For Training Purposes Only
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>