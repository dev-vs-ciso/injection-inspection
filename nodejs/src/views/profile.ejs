<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - SecureBank Pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .avatar-circle {
            width: 80px;
            height: 80px;
            border-radius: 50%;
        }
        .transaction-credit { color: #198754; }
        .transaction-debit { color: #dc3545; }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-shield-check me-2"></i>SecureBank Pro
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="bi bi-speedometer2 me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/transactions/search">
                            <i class="bi bi-search me-1"></i>Search
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/feedback">
                            <i class="bi bi-chat-dots me-1"></i>Feedback
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i><%= user.firstName %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/user/profile">
                                <i class="bi bi-person me-2"></i>Profile
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/user/logout">
                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main>
        <div class="container my-4">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Profile</li>
                </ol>
            </nav>

            <!-- Profile Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <div class="avatar-circle bg-white text-primary d-flex align-items-center justify-content-center">
                                        <i class="bi bi-person-fill fs-1"></i>
                                    </div>
                                </div>
                                <div class="col">
                                    <h2 class="mb-1"><%= user.firstName %> <%= user.lastName %></h2>
                                    <p class="mb-1 opacity-75"><%= user.email %></p>
                                    <p class="mb-0 opacity-75">Account: <%= user.accountNumber %></p>
                                </div>
                                <div class="col-auto text-end">
                                    <div class="badge bg-success fs-6">
                                        <i class="bi bi-check-circle me-1"></i>Active Account
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Account Information -->
                <div class="col-lg-8 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-person-lines-fill me-2"></i>Account Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>Full Name:</strong>
                                </div>
                                <div class="col-sm-8">
                                    <%= user.firstName %> <%= user.lastName %>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>Email Address:</strong>
                                </div>
                                <div class="col-sm-8">
                                    <%= user.email %>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>Account Number:</strong>
                                </div>
                                <div class="col-sm-8">
                                    <code><%= user.accountNumber %></code>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>Current Balance:</strong>
                                </div>
                                <div class="col-sm-8">
                                    <span class="fs-5 text-primary fw-bold">$<%= parseFloat(user.balance).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <strong>Account Created:</strong>
                                </div>
                                <div class="col-sm-8">
                                    <%= user.createdAt.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                    <% if (profileStats) { %>
                                    <small class="text-muted">(<%= profileStats.accountAge %> days ago)</small>
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-sm-4">
                                    <strong>Account Status:</strong>
                                </div>
                                <div class="col-sm-8">
                                    <% if (user.isActive) { %>
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Active
                                    </span>
                                    <% } else { %>
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle me-1"></i>Inactive
                                    </span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Account Activity Summary -->
                    <% if (profileStats) { %>
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-activity me-2"></i>Account Activity Summary
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-4 mb-3">
                                    <div class="card bg-light h-100">
                                        <div class="card-body">
                                            <i class="bi bi-hash text-primary fs-2 mb-2"></i>
                                            <h4 class="card-title"><%= profileStats.transactionCount.toLocaleString() %></h4>
                                            <p class="card-text">Total Transactions</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-4 mb-3">
                                    <div class="card bg-light h-100">
                                        <div class="card-body">
                                            <i class="bi bi-calendar3 text-success fs-2 mb-2"></i>
                                            <h5 class="card-title">
                                                <% if (profileStats.firstTransactionDate) { %>
                                                <%= profileStats.firstTransactionDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                                                <% } else { %>
                                                No transactions
                                                <% } %>
                                            </h5>
                                            <p class="card-text">First Transaction</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-4 mb-3">
                                    <div class="card bg-light h-100">
                                        <div class="card-body">
                                            <i class="bi bi-calendar-check text-info fs-2 mb-2"></i>
                                            <h5 class="card-title">
                                                <% if (profileStats.lastTransactionDate) { %>
                                                <%= profileStats.lastTransactionDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                                                <% } else { %>
                                                No transactions
                                                <% } %>
                                            </h5>
                                            <p class="card-text">Latest Transaction</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Quick Actions -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="bi bi-lightning-charge me-2"></i>Quick Actions
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/dashboard" class="btn btn-primary">
                                    <i class="bi bi-speedometer2 me-2"></i>View Dashboard
                                </a>
                                <a href="/transactions/search" class="btn btn-outline-primary">
                                    <i class="bi bi-search me-2"></i>Search Transactions
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Security Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="bi bi-shield-check me-2"></i>Security Information
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info small" role="alert">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Security Tip:</strong> Always log out when using shared computers and never share your login credentials.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted mb-0">&copy; 2024 SecureBank Pro. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-end">
                    <small class="text-muted">Version 2.1.0 | <a href="#" class="text-decoration-none">Privacy Policy</a></small>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Print styles for profile
    document.addEventListener('DOMContentLoaded', function() {
        const printStyle = document.createElement('style');
        printStyle.textContent = `
            @media print {
                .navbar, .breadcrumb, .btn, .alert-warning { display: none !important; }
                .container { width: 100% !important; max-width: none !important; }
                .card { border: 1px solid #000 !important; page-break-inside: avoid; }
                .bg-primary { background-color: #0066cc !important; }
            }
        `;
        document.head.appendChild(printStyle);
    });
    </script>
</body>
</html>